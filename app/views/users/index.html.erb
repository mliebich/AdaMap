<div class="container mx-auto">
  <h1 class="title">Users</h1>
  <%= form_with(url: users_path, method: :get, data: {
  controller: "search-form", turbo_frame: "users", turbo_action: "advance"}) do |form| %>
    <%= form.label :query, "Search users", class: "block mb-2" %>
    <div class="space-x-3 relative z-0 mb-6 w-full group">
      <%= form.text_field :query, class: "w-1/5 shadow rounded-md border border-gray-200", data: {action: "input->search-form#search"} %>
      <%= form.submit "Search", class: "btn-small cursor-pointer" %>
    </div>
  <% end %>
  <%= render "usertable", users: @users %>
</div>