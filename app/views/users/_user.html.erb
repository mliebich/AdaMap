<div id="<%= dom_id user %>">
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <td class="py-4 px-6"><%= user.email %></td>
    <td class="py-4 px-6"><%= user.name %></td>
    <td class="py-4 px-6"><%= user.roles.pluck(:name) %></td>
    <td class="py-4 px-6">
      <div class="flex space-x-4">
        <div><%= link_to 'Edit', edit_user_path(user), class: "btn-small" %></div>
        <div><%= link_to 'Destroy', user, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' }, class: "btn-small" %></div>
        <div><%= link_to 'Set role', edit_user_path(user),  class: "btn-small" %></div>
      </div>
    </td>
  </tr>
</div>