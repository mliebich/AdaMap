<%= form_with url: login_path, scope: :user, builder: TailwindFormBuilder, class: "mb-4 md:flex md:flex-wrap md:justify-between" do |form| %>
  <div class="relative z-0 mb-6 w-full group">
    <%= form.label :email%>
    <%= form.email_field :email, required: true %>
  </div>
  <div class="relative z-0 mb-6 w-full group">
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.label :remember_me%>
    <%= form.check_box :remember_me%>
  </div>
  <%= form.submit "Log in", class:"btn-small cursor-pointer"%>
<% end %>