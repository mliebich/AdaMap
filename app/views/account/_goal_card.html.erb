<div class="flex leading-normal max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
  <% if current_user.task_progresses.find_by_task_id(id).done? && current_user.task_progresses.find_by_task_id(id).passed? %>
    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Done</span>
  <% elsif current_user.task_progresses.find_by_task_id(id).done?%>
    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">In review</span>
  <% else %>
    <span class="animate-waving-hand">👋🏻</span>
  <% end %>
  <div class="p-5">
    <h5 class="text-gray-900 font-bold text-xl mb-2 text-gray-600 flex items-center"><%= title %> ID:<%= id %></h5>
    <p class="text-sm text-gray-600 flex items-center"><%= content %></p>
    <div class="flex justify-center inline-block ml-2 pt-6">
      <%= form_tag(goal_path(current_user), method: :delete) do %>
        <%= hidden_field_tag('task_id', id) %>
        <%= button_tag(class: 'btn-small', type: 'submit') do %>
          Remove <%= id %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>