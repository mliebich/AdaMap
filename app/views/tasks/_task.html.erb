<%= form_tag(user_goals_path(current_user)) do %>
  <%= hidden_field_tag('task_id', @task.id) %>
  <%= button_tag(class: 'btn-small', type: 'submit', hidden: @goal_added) do %>
    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path></svg>
  <% end %>
<% end %>
<% if @goal_added == true %>
  <%= form_tag(setstatus_path(current_user)) do %>
    <%= hidden_field_tag('task_id', @task.id) %>
    <%= button_tag(class: @done ? @style2 : @style, type: 'submit', disabled: @done) do %>
      <div class = 'items-center justify-center hidden col-span-1 space-x-2 sm:flex'>
      <b><%= @done ? 'Completed' : 'In progress' %></b>
      <% if @done == true %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-green-600">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <% else %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-red-500">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.697 50.697 0 0112 13.489a50.702 50.702 0 017.74-3.342M6.75 15a.75.75 0 100-1.5.75.75 0 000 1.5zm0 0v-3.675A55.378 55.378 0 0112 8.443m-7.007 11.55A5.981 5.981 0 006.75 15.75v-1.5" />
      </svg>
      <% end %>
    </div>
    <% end %>
  <% end %>
<% end %>
<p class="my-5">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= task.title %></strong>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= task.content %>
  </p>
  <div class="flex justify-end items-center flex-wrap mt-6">
    <button class="btn-small" data-action="click->modal#close">Close</button>
  </div>