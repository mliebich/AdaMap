<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @task %>
    <%= form_tag(user_goals_path(current_user)) do %>
      <%= hidden_field_tag('task_id', @task.id) %>
      <%= button_tag(class: 'btn', type: 'submit') do %>
        Add
      <% end %>
    <% end %>
    <%= link_to 'Edit this task', edit_task_path(@task), class: "btn" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this task', task_path(@task), method: :delete, class: "btn" %>
    </div>
    <%= link_to 'Back to tasks', tasks_path, class: "btn" %>
  </div>
</div>
