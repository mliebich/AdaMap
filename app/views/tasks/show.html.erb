<%= turbo_frame_tag "modal" do %>
  <div class="fixed top-12 right-0 left-0 z-50 flex justify-center overflow-auto"  data-controller="modal" data-modal-allow-background-close="false" data-modal-target="container" data-action="click->modal#closeBackground keyup@window->modal#closeWithKeyboard">
    <div class="max-h-screen w-full max-w-lg relative flex">
      <div class="m-1 bg-white rounded shadow">
        <div class="p-8">
          <%= render @task %>
          <div class="flex justify-end items-center flex-wrap mt-6">
            <%= link_to 'Tasks', 'javascript:history.go(-1)', class: "btn-small"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>