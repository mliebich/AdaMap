<%= turbo_frame_tag "modal" do %>
  <div class="fixed top-12 right-0 left-0 z-50 flex justify-center"  data-controller="modal" data-modal-allow-background-close="false" data-modal-target="container" data-action="click@window->modal@closeWithKeyboard click->modal#closeBackground keyup@window->modal#closeWithKeyboard">
    <div class="max-h-screen w-full max-w-lg relative flex">
      <div class="m-1 bg-white rounded shadow">
        <div class="p-8">
          <%= render @task %>
          <div class="flex justify-end items-center flex-wrap mt-6">
            <button class="btn-small" data-action="click->modal#close">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>