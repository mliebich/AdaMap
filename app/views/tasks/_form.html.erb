<%= form_with(model: task, class: "contents") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= form.label :content %>
    <%= form.rich_text_area :content, data: { controller: "trix" }, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5" >
    <%= form.label :prerequisite_id %>
    <br>
    <%= form.collection_select :prerequisite_id, Task.all, :id, :title, {:include_blank => false}, :multiple => true,  class: "block shadow rounded-md border border-gray-200 outline-none px-2 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5 w-19" >
    <%= form.label :level %>
    <br>
    <%= form.select :level, Task.levels.keys, {:include_blank => false}, class: "block shadow rounded-md border border-gray-200 outline-none px-2 py-2 mt-2 w-full" %>
  </div>
  <div class="inline_">
    <%= form.submit class: "btn-small" %>
  </div>
<% end %>